{
  "name": "vertja",
  "version": "1.0.0",
  "description": "Figma Plugin for vertically written Japanese",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json --noEmit && esbuild ./src/index.ts --bundle --minify --outfile=./index.js",
    "watch": "tsc -p ./tsconfig.json --watch --noEmit & esbuild ./src/index.ts --bundle --minify --outfile=./index.js --watch",
    "_build": "tsc -p tsconfig.json",
    "_watch": "npm run build -- --watch"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "esbuild": "^0.15.6",
    "typescript": "*"
  }
}
